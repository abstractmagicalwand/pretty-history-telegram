{
  "name": "pretty-history-telegram",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./server.js",
    "start:dev": "./node_modules/.bin/webpack-dev-server -d",
    "dev": "yarn install && yarn build:dev",
    "prod": "yarn install --production && yarn build:prod",
    "build:dev": "./node_modules/.bin/webpack --config webpack.config.js",
    "build:prod": "./node_modules/.bin/webpack -p --config webpack.config.prod.js",
    "dev:fish": "yarn install; yarn build:dev",
    "prod:fish": "yarn install --production; yarn build:prod"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^0.11.1",
    "react-hot-loader": "next",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "babel-eslint": "^7.2.3",
    "express": "^4.15.3",
    "normalize.css": "^7.0.0",
    "ramda": "^0.24.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "no-plusplus": 0,
      "no-param-reassign": 0,
      "no-confusing-arrow": 0,
      "no-nested-ternary": 0,
      "react/no-array-index-key": 0,
      "no-shadow": 0,
      "no-case-declaration": 0,
      "no-mixed-operators": 0,
      "react/jsx-filename-extension": 0
    }
  }
}
